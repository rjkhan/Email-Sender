{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "max-len": [2, { "code": 120, "ignoreTrailingComments": true }],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": "warn",
        "import/extensions": 0,
        "import/no-unresolved": 0,
        "import/no-extraneous-dependencies": 0,
        "class-methods-use-this": 0,
        "comma-dangle": "warn",
        "no-undef": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": 0,
    }
}